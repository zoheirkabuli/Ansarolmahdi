<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/dialog_bg_circle"
      android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">

    <TextView
        android:id="@+id/tv_name_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="زهیر کابلی"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:lineSpacingExtra="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/tv_email_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zoheyrk@gmail.com"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:lineSpacingExtra="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <TextView
    android:id="@+id/tv_phone_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="09336063038"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="20dp"
    android:lineSpacingExtra="5dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:textStyle="bold"
    android:textSize="17sp"
    android:textColor="@color/white"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layoutDirection="rtl"
    >

    <Button
        android:id="@+id/btn_attend_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialogbtn"
        android:text="بستن"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />


</LinearLayout>






</LinearLayout>
